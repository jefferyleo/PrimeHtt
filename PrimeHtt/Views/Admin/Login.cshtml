@model PrimeHtt.Models.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="padding-top: 70px; padding-bottom: 70px;">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Prime Travel
                </h3>
            </div>
            <div class="panel-body">
                <form id="LoginForm" name="LoginForm" method="post" @*action="@Url.Content("~/Admin/Login")"*@>
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    @if (ViewBag.LoginStatus != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <strong>Error!</strong> @ViewBag.LoginStatus
                        </div>
                    }
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" id="Username" name="Username" class="form-control" placeholder="Enter your Username" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" id="LoginButton" name="LoginButton" value="Login" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>