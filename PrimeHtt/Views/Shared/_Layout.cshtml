<body>
    <nav class="navbar navbar-fixed-top" style="background-color: #f7f7f7; border-color: #e6e6e6;">
        <div class="container" style="margin: 10px;">
            <div class="navbar-header">
                <button id="menuBar" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primeNavbar" aria-expanded="false" aria-controls="primeNavbar" style="border: 1px solid #6699ff;">
                    <span class="icon-bar" style="background-color: #6699ff;"></span>
                    <span class="icon-bar" style="background-color: #6699ff;"></span>
                    <span class="icon-bar" style="background-color: #6699ff;"></span>
                </button>
                <a href="~/Home">
                    @*<img src="~/img/58779_logo_0_56027.png" style="width: 60px; margin-left: 20px;" />*@
                    @*<img src="~/img/logo.png" style="width: 250px; margin-top: 7px;"/>*@
                    <img src="~/img/logosmaller2.png" class="logoImage"/>
                </a>
            </div>
            <div id="primeNavbar" class="collapse navbar-collapse" style="font-size: 15px; width: 95vw">
                <ul class="navbar-nav ml-auto nav navbar-right" style="margin-top: 3px;">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/#home">
                            HOME
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#about">ABOUT THE FOUNDER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#services">SERVICES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#experiences">EXPERIENCES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#contact">CONTACT US</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="body-content" style="margin-top: 70px;">
        @RenderBody()
        <hr />
        <footer class="wrapper style1 align-center">
            <div class="inner">
                <ul class="icons">
                    @{
                        using (var db = new PrimeTravelEntities())
                        {
                            var social = (from i in db.SocialNetwork
                                          where i.IsActive == true && i.IsDeleted == false
                                          select new SocialNetworkModel()
                                          {
                                              SocialNetworkId = i.SocialNetworkId,
                                              SocialNetworkLink = i.SocialNetworkLink,
                                              SocialNetworkName = i.SocialNetworkName,
                                              SocialNetworkType = i.SocialNetworkType,
                                          }).ToList();

                            for (int item = 0; item < social.Count(); item++)
                            {
                                var setClass = "icon2 style2 " + social[item].SocialNetworkType;
                                <li><a href="@social[item].SocialNetworkLink" target="_blank" class="@setClass" style="color: #000;"><span class="label">@social[item].SocialNetworkName</span></a></li>
                            }
                        }
                    }
                </ul>
                <p>Copyright &copy; @DateTime.Now.Year. All Rights Reserved by HTT Travel (M) Sdn Bhd</p>
            </div>
        </footer>
        <a href="" id="scroll-to-top" style="background-position: center center; position: fixed; z-index: 1000; bottom: 30px; right: 30px; width: 64px; height: 64px; background-size: 50%; background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; transition: background-color 300ms linear; display: block; background-color: rgba(30, 30, 30, 0.4);"></a>
    </div>
    <script>
        $(document).ready(function () {
            $("#scroll-to-top").illBeBack();

            $("#primeNavbar ul li.nav-item").click(function () {
                $('#menuBar').removeClass("navbar-toggle").addClass("navbar-toggle collapsed");
                $('#primeNavbar').removeClass("navbar-collapse in").addClass("navbar-collapse collapse");
            });
        });
    </script>
</body>
</html>
