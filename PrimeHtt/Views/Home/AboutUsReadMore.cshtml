@model PrimeHtt.Models.AboutUs

@{
    ViewBag.Title = "AboutUsReadMore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align: center;">
    @Html.Raw(Model.AboutUsTitle)
</h1>

<div class="container" style="text-align: center;">
    <div class="row">
        <div class="col-md-12" style="padding: 0px 100px; margin: 20px 0px;">
            @Html.Raw(Model.AboutUsTopDescription)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <a href="@Model.AboutUsImage" target="_blank">
                <img src="@Model.AboutUsImage"/>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="padding: 0px 100px;margin: 30px 0">
            @Html.Raw(Model.AboutUsBottomDescription)
        </div>
    </div>
</div>